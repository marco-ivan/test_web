<%- include("../partials/header") %>
<h2 id="forumHeader" class="title display-2">Edit Your Comment</h2>

    <div class="container">
        <form id="form" action="/forum/<%= post_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="card">

                <p class="card-title bg-primary pl-5 py-4 text-light"><strong>Edit Comment</strong></p>

                <div class="card-body">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend col-3">
                            <label class="input-group-text col-12" for="title">Comment:</label>
                        </div>
                        <textarea id="postContent" class="form-control" name="comment[text]" aria-label="With textarea"><%= comment.text %></textarea>
                    </div>
                </div>

            </div>
            <div class="form-group my-5">
                <button type="submit" class="btn btn-lg btn-primary">Submit</button>
            </div>
        </form>
    </div>

    <%- include("../partials/footer") %>